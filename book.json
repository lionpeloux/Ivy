{
    "gitbook": ">= 3.2.2",
    "plugins": [
        "mathjax",
        "-katex",
        "numbered-headings",
        "edit-link",
        "toolbar-button",
        "-theme-api",
        "image-captions",
        "-toggle-chapters",
        "video"
    ],
    "pluginsConfig": {
        "theme-api": {
            "split": true,
            "theme": "light",
            "showLevel": true
        },
        "theme-default": {
             "showLevel": false
        },
        "image-captions": {
          "caption": "Figure _PAGE_IMAGE_NUMBER_ : _CAPTION_",
          "align": "center"
        },
        "edit-link": {
            "base": "https://github.com/lionpeloux/Ivy/tree/master/doc",
            "label": "Edit"
        },
        "toolbar-button": {
            "icon": "fa-slideshare",
            "url": "https://lionpeloux.github.io/Ivy/doc/slides/deck_01/",
            "label": "Slides"
        }
    },
    "structure": {
        "readme": "readme.md",
        "summary": "summary.md"
    },
    "styles": {
      "website": "./styles/website.css"
    },
    "root": "./doc/gitbook",
    "title": "Ivy : a .NET library for parametric design",
    "author": "Lionel du Peloux",
    "language" : "en"
}
